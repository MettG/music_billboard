<h1 class="header">Add A Song</h1>
<%= form_with(model: [@arist, @song], local: true, class: "ui form") do |f| %>
  <%= f.label :name %>
  <%= f.text_area :name, required: true, autofocus: true %>
  <br />
  <%= f.label :genre %>
  <%= f.text_field :genre, required: true %>
  <br />
  <br />
  <%= f.label :length %>
  <%= f.number_field :length, required: true, in:0.30..5, step: 0.01 %>
  <br />
  <br />
  <%= f.label :year %>
  <%= f.number_field :year, required: true , in:1900..2019%>
  <br />
  <br />
  <%= f.submit nil, class: "ui button blue" %>
<% end %>